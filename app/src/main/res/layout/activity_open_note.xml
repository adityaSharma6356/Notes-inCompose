<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.OpenNoteActivity"
    android:id="@+id/currentview">
    <TextView
        android:id="@+id/tvtittle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="njsdisoad"
        android:layout_alignParentStart="true"
        android:layout_marginVertical="5dp"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginStart="20dp"
        android:layout_alignParentTop="true"

        />

    <SurfaceView
        android:id="@+id/svsingleline"
        android:layout_alignParentTop="true"
        android:layout_marginTop="61dp"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:alpha="0.6"/>

    <EditText
        android:id="@+id/ecNoteEdit"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="62dp"
        android:layout_alignParentBottom="true"
        android:gravity="top" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fbsavebutton"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:contentDescription="@string/savebutton"
        android:src="@drawable/save_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ecNoteEdit" />


</RelativeLayout>